<!-- app/views/ticket_mailer/ticket_assigned_to_team.html.erb -->
<!DOCTYPE html>
<html>

<head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background-color: #f4f4f4;
            padding: 10px;
            text-align: center;
        }

        .content {
            padding: 20px;
        }

        .ticket-details {
            border: 1px solid #ddd;
            padding: 15px;
            background-color: #f9f9f9;
        }

        .ticket-details dt {
            font-weight: bold;
            margin-top: 10px;
        }

        .ticket-details dd {
            margin-bottom: 10px;
        }

        .footer {
            margin-top: 20px;
            font-size: 0.9em;
            color: #777;
        }
    </style>
</head>

<body>
    <div class='container'>
        <div class='header'>
            <h2>Ticket Assignment Notification</h2>
        </div>
        <div class='content'>
            <p>Hello <%= @user&.name || 'Team Member' %>,</p>
            <p>A new ticket has been assigned to your team in the ITSM system.</p>

            <div class='ticket-details'>
                <h3>Ticket Details</h3>
                <dl>
                    <dt>Ticket Number:</dt>
                    <dd><%= @ticket.ticket_number %></dd>

                    <dt>Title:</dt>
                    <dd><%= @ticket.title %></dd>

                    <dt>Description:</dt>
                    <dd><%= @ticket.description || 'No description provided' %></dd>

                    <dt>Status:</dt>
                    <dd><%= @ticket.status&.capitalize || 'Not set' %></dd>

                    <dt>Priority:</dt>
                    <dd><%= @ticket.priority&.capitalize || 'Not set' %></dd>

                    <dt>Category:</dt>
                    <dd><%= @ticket.category || 'Not set' %></dd>

                    <dt>Urgency:</dt>
                    <dd><%= @ticket.urgency&.capitalize || 'Not set' %></dd>

                    <dt>Impact:</dt>
                    <dd><%= @ticket.impact&.capitalize || 'Not set' %></dd>

                    <dt>Reported At:</dt>
                    <dd><%= @ticket.reported_at&.in_time_zone('Africa/Johannesburg')&.strftime('%Y-%m-%d %H:%M') || 'Not set' %></dd>

                    <dt>Team:</dt>
                    <dd><%= @team_name %></dd>

                    <dt>Requester:</dt>
                    <dd><%= @ticket.requester&.name || 'Not set' %></dd>

                    <% if @attachment %>
                    <dt>Attachment:</dt>
                    <dd><%= @attachment.filename.to_s %></dd>
                    <% end %>

                    <% if @files.any? %>
                    <dt>Files:</dt>
                    <dd>
                        <ul>
                            <% @files.each do |file| %>
                            <li><%= file.filename.to_s %></li>
                            <% end %>
                        </ul>
                    </dd>
                    <% end %>
                </dl>
            </div>

            <p>Please log in to the ITSM system to view and manage this ticket.</p>
        </div>
        <div class='footer'>
            <p>This is an automated message from the ITSM system. Please do not reply directly to this email.</p>
        </div>
    </div>
</body>

</html>